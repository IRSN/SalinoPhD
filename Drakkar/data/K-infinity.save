#!/bin/bash
savename=$(basename $0 | cut -d"." -f1)
if [ $# = 0 ]
   then
   echo "usage: "$savename".save directory" 1>&2
   exit 1
fi
echo -e "\nExecute ${savename}.save script\n"
MACH=`uname -s`
Sysx="`echo $MACH | cut -b -6`"
if [ $Sysx = "CYGWIN" ]; then
   MACH=`uname -o`
elif [ $Sysx = "AIX" ]; then
   MACH=`uname -s`
else
   MACH=`uname -sm | sed 's/[ ]/_/'`
fi
ls -ltr
mv *.ascii "$1"/"$MACH"/.

echo -e $savename".save script terminated\n"
